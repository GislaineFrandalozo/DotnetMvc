@model DotnetMvc.Models.ListModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ListModel</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="p-2 form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="bg-dark bg-opacity-50 text-white form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="p-2 form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="bg-dark bg-opacity-50 text-white  form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="p-2 form-group">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input asp-for="ReleaseDate" class="bg-dark bg-opacity-50 text-white form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="p-2 form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="p-2 text-white" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
