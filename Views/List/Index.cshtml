@model IEnumerable<DotnetMvc.Models.ListModel>

@{
    ViewData["Title"] = "Lista";
}

<h1>Anotações</h1>

<p>
    <a class="text-white" asp-action="Create">Create New</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-truncate" style="max-width: 8rem;">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="text-truncate" style="max-width: 14rem;">
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <a class="text-white" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="text-success" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
